<div class="container">
  <div class="text-center p-3 m-3">
    <h1><%= @city.name%></h1>
    <img class="img-fluid img-goss" src="http://lorempixel.com/800/400/city/<%= params[:id] %>/">
  </div>
  <% @loufoc.each do |user| %>
    <h2><%= user.first_name%> writes this gossip :</h2>
    <% user.gossips.each do |gossip|%>
      <div class="card gossip-card m-2" style="width: auto;">
        <div class="card-body">
          <h5 class="card-title"><%= link_to gossip.title, gossip_path(gossip.id), :class => "new-link"%></h5>
          <p class="card-text">Content : <%= gossip.content%></p>
        </div>
      </div>
    <% end %>
  <% end %>

</div>

