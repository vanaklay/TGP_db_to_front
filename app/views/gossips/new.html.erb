
<div class="container">
  <div class="text-center">
    <h1 class="p-3 m-3">Create a new gossip here</h1>
    <% if alert %>
      <div class="alert alert-danger" role="alert">
        <p><%= alert %></p>
        <ul class="list-unstyled">
          <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      
    <% end %>
  </div>
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="row justify-content-center">
        <div class="w-50">
          <div class="form-group">
            <%= label_tag 'Title'%>
            <%= text_field_tag :title, params[:title], class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag 'Content'%>
            <%= text_area_tag :content, params[:content], class: 'form-control'%>
          </div>
        </div>
      </div>

      <div class="form-group d-flex">
        <%= submit_tag "Create Gossip", :class => "btn btn-secondary mx-auto" %>
      </div>
    <% end %>

    
  
</div>