<div class="container">
  <div class="text-center p-3 m-3">
    <h1>Title of this gossip : <%= @gossip.title%></h1> 
    <% if alert %>
      <div class="alert alert-danger" role="alert">
        <p><%= alert %></p>
        <ul class="list-unstyled">
          <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      
    <% end %>
  </div>
  <%= form_for @gossip do |f| %>
    <div class="form-group">
      <label>Gossip's Title</label>
      <%= f.text_field :title, class: 'form-control'%>
    </div>
    <div class="form-group">
      <label>Content</label>
      <%= f.text_area :content, class: 'form-control'%>
    </div>
    <div class="form-group">
      <label>Your tag : </label>
      <%= f.select :tags, options_for_select(Tag.all.collect{ |t| [t.title, t.id] }), class: "form-control" %>
    </div>
    <div class="form-group">
      <button  class="btn btn-secondary" type="submit">Update</button>
    </div>
  <% end %>
  <%= link_to "Back" , gossip_path(params[:id]), :class => "btn-custom"%>
</div>